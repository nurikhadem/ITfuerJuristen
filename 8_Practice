- 2 -
def is_even(x):
  if x % 2 > 0:
    return False
  else:
    return True
    
- 3 -
def is_even(x):
  if x % 1 > 0:
    return False
  else:
    return True
    
- 4 -
def digit_sum(n):
  sum = 0
  for d in str(n):
    sum += int(d)
  return sum
  
 - 4 alternative -
 def digit_sum(n):
  sum = 0
  while n != 0:
    sum += n % 10
    n = n // 10
  return sum

print digit_sum(int(raw_input("enter Your number here: ")))

