  - 8 -
from random import randint

# Generates a number from 1 through 10 inclusive
random_number = randint(1, 10)
guesses_left = 3
while guesses_left > 0:# Start your game!
  guess = raw_input('Please guess a number in between 1 and 10!')
  if int(guess) == int(random_number):
    print "You win!"
    break
  guesses_left -= 1
else:
  print "You lose! The number was %d" % random_number
  
